      <link rel="stylesheet" href="/css/reserve.css">
      <link rel="stylesheet" href="/css/404.css">
    </head>
<body>
  <div class="bg"></div>
  <div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn btn btn-sm" onclick="closeNav()"><i class="fas fa-chevron-left"></i></a>
    <br><br>
    <img src="/icon/logoig.png" onclick="window.location.href='/'" class="hide img-fluid rounded mx-auto d-block" style="max-width:35%;height:auto" alt="Accueil">
    
    <br>
    <% if(req.user){ %>
        <a href="/profile">Mon compte</a>
        <a href="/help">Besoin d'aide ?</a>
        <% if(req.user.isAdmin){ %>
            <a href="/admin/users">Gérer les utilisateurs</a>
            <a href="/admin/events">Gérer les évènements</a>
        <% } else if(user_event_id != "Aucune"){ %>
            <a href="/event/<%= user_event_id %>/reserve">Réserver un créneau</a>
        <% } %>
        <a href="/logout">Se déconnecter </a>
    <% } else { %>
        <a href="/login">Se connecter </a>
    <% } %>
  </div>
  
  <div class="wrapper" id="main">
    <!-- Use any element to open the sidenav -->
    <span class="openNavButton btn btn-light text-primary border border-primary" onclick="openNav()"><i class="fas fa-bars"></i> MENU</span>

    <button class="homeButton btn btn-light text-primary border border-primary" onclick="window.location.href='/'"><i class="fas fa-home"></i> Accueil </button>

    <div class="container-fluid" id="page_container">
      <br>
      {{ page }}
    </div>
  </div>
</body>

<div class="ml-3 mr-3" style="right:0px;bottom:0px;position:fixed">
    <p class="small text-dark"><a class="text-light" target="_blank" href="https://www.polytech.umontpellier.fr/"><em>© 2020 Polytech Montpellier</em></a>
    </p>
</div>


<script>
  var user = <%- req.user ? JSON.stringify(req.user) : JSON.stringify({}) %>
  var req_csrfToken = "<%- req.csrfToken() %>"
  var user_event_id = "<%= user_event_id %>"
</script>


